  <script>
    // Expand All / Collapse All for <details>
    document.getElementById('expandAll').addEventListener('click', function(){
      document.querySelectorAll('main.notes details').forEach(d => d.open = true);
    });
    document.getElementById('collapseAll').addEventListener('click', function(){
      document.querySelectorAll('main.notes details').forEach(d => d.open = false);
    });
    document.getElementById('printBtn').addEventListener('click', function(){
      window.print();
    });

    // Keyboard accessibility: toggle detail on Enter/Space when focused on summary
    document.querySelectorAll('summary').forEach(s => {
      s.tabIndex = 0;
      s.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const parent = s.parentElement;
          parent.open = !parent.open;
        }
      });
    });
  </script>
